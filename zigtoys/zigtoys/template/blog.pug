            .row
                .col-12.col-xs-12.col-sm-7.col-md-8(data-aos="fade-right" data-duration="1000" data-aos-easing="ease-out-sine")
                   a.img-big(href="blog-detail.html")
                        img.img-fluid(src="images/product_images/gundam.svg", alt="Gundam")
                        .img-title
                            h2 Chia sẻ kinh nghiệm chơi mô hình Gundam (P1)
                            span.post-date 25 Th6, 2020
                .col-12.col-xs-12.col-sm-5.col-md-4(data-aos="fade-up" data-aos-anchor-placement="center-bottom" data-duration="1000" data-aos-easing="ease-out-sine")
