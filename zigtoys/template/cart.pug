extends template-part/layout.pug
block title
    title Giỏ hàng
block content
    section
        .container
            .row
                .col-12.col-xs-12.col-sm-12.col-md-12.breadcrumb-contain
                    ol.breadcrumb
                        li.breadcrumb-item
                            a.black-text(href="index.html") Trang chủ
                        li.breadcrumb-item.active Giỏ hàng
    section
        .container
            .row
                .col-12.col-sm-12
                    .product-container
                        table#cart-table
                            tr
                                th
                                th.cart-name Tên Sản Phẩm
                                th.cart-price Đơn Giá
                                th.cart-quanty Số Lượng
                                th.cart-sum Tổng Giá
                                th.cart-del 
                            tr.cart-row
                                td
                                    .cart-img-product
                                        img(src="images/product_images/01-Figure.jpg", alt)
                                td.cart-name 
                                    a(href="product_detail.html") S.H.Figuart<br /> Kamen Rider Zero One
                                td.cart-price 1000000
                                td.product-qty
                                    .cart-qty
                                        button.qty-minus
                                            i.fas.fa-minus
                                        input(type="text" value="1").numberInCart
                                        button.qty-plus
                                            i.fas.fa-plus
                                td.cart-sum 
                                td
                                    button.delItem
                                        i.far.fa-trash-alt
                    .billCart.container
                        .row
                            .col-sm-6.col-md-6.col-xs-12
                                .couponBox
                                    p.boldText
                                        | Mã Khuyến Mãi (nếu có)
                                    .inputCoupon
                                        .mt-3
                                            .md-form.md-outline.mb-0
                                                input(type="text", placeholder="Mời nhập mã")#discount-code.form-control.font-weight-light
                                                button(type="submit" class="applyCoupon") ÁP DỤNG
                            .col-sm-6.col-md-6.col-xs-12
                                .previewCost
                                    p.titlePreview Thành Tiền
                                    .bill-detail
                                        span Tạm Tính
                                        span
                                    .discount
                                        span Giảm giá
                                            span.discount-rate
                                        p 0
                                    p.previewSum 
                                        span Tổng cộng: 
                                        span
                                    button(type="submit" class="checkOut") TIẾN HÀNH ĐẶT HÀNG