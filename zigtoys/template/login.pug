block title
    title Đăng nhập | Đăng ký
link(rel='icon' type='image/png' href='images/icon/favicon-16x16.png')
link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap")
link(rel="stylesheet", href="css_fontawesome/all.css")
link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css")
link(rel="stylesheet", href="css/style_login.css")
link(rel="stylesheet", href="css/style_media.css")
block content
    .container
        .row.wrap-all
            .logo-img
                a(href="index.html")
                    img(src="images/icon/logo2.jpg", alt="")
            .wrap-form
                ul.nav.nav-pills#pillsTab(role="tablist")
                    li.nav-item
                        a.nav-link.active#loginTab(data-toggle="pill" href="#pillsLoginTab" role="tab") Đăng Nhập
                    li.nav-item
                        a.nav-link#signupTab(data-toggle="pill" href="#pillsSignupTab" role="tab") Đăng Ký
                .tab-content#pillsTabContent
                    .tab-pane.fade.show.active#pillsLoginTab(role="tabpanel")
                        .col-sm-12
                            form.inputGroup#login(method="post" action="index.html")
                                .form-group
                                    input(type="email" placeholder="Email của bạn*" required oninvalid="this.setCustomValidity('Vui lòng nhập địa chỉ email hợp lệ.')" oninput="setCustomValidity('')" autocomplete="none" maxlength="200")#inputMailLogin.inputField
                                .form-group.pwd-section
                                    input#inputPassLogin.inputField(type="password" placeholder="Mật khẩu*" required oninvalid="this.setCustomValidity('Vui lòng nhập mật khẩu.')" oninput="setCustomValidity('')" autocomplete="none" maxlength="100").inputPass
                                    .showHide
                                        i.far.fa-eye.eyeConLog
                                    .rememberBox
                                        input#remember_me(type='checkbox')
                                        label(for='remember_me') Ghi nhớ đăng nhập
                                .form-group
                                    button.btn.btn-default#btnLogin ĐĂNG NHẬP
                                    .forgotBox
                                        a.forgot-pwd(href="#" data-toggle='modal' data-target="#reset" data-dismiss="modal") Quên mật khẩu?
                    .tab-pane.fade#pillsSignupTab(role="tabpanel")
                        .col-sm-12
                            form.inputGroup#signup(method="post")
                                .form-group
                                    input(type="text" placeholder="Họ tên*" required oninvalid="this.setCustomValidity('Vui lòng nhập tên của bạn.')" oninput="setCustomValidity('')" autocomplete="none" maxlength="30")#inputName.inputField
                                .form-group
                                    input(type="email" placeholder="Email của bạn*" required oninvalid="this.setCustomValidity('Vui lòng nhập địa chỉ email hợp lệ.')" oninput="setCustomValidity('')" autocomplete="none" maxlength="200")#inputMailSignup.inputField
                                .form-group.pwd-section
                                    input#inputSignupPass.inputField(type="password" placeholder="Mật khẩu*" required oninvalid="this.setCustomValidity('Vui lòng nhập mật khẩu. Mật khẩu phải có từ 6-20 ký tự bao gồm ít nhất 1 chữ hoa, 1 chữ thường, 1 số và 1 ký tự đặc biệt')" oninput="setCustomValidity('')" autocomplete="none" maxlength="100").inputPass
                                    .showHide
                                        i.far.fa-eye.eyeConSign
                                .form-group
                                    input#inputRe__SignupPass.inputField(type="password" placeholder="Xác nhận mật khẩu*" required oninvalid="this.setCustomValidity('Vui lòng nhập lại mật khẩu. Mật khẩu phải trùng khớp với mật khẩu bạn đã đặt.')" oninput="setCustomValidity('')" autocomplete="none" maxlength="100")
                                .form-group
                                    button.btn.btn-default#btnSignup ĐĂNG KÝ
            
script(src="js/jquery-3.5.0.js")
script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.js")
script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
script(src="js/login.js")